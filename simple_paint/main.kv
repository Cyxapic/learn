<ToolsLayout>:
    GridLayout:
        rows: 2
        cols: 1
        BoxLayout:
            Button:
                id: color_pick
                text: "Выбрать цвет"
                on_press: root.choose_color()

        BoxLayout:
            GridLayout:
                rows: 3
                cols: 1
                Button:
                    id: id_circle
                    text: "Circle"
                    on_press: root.pick_circle()
                Button:
                    id: id_line
                    text: "Line"
                    on_press: root.pick_line()
                Button:
                    id: id_clear
                    text: "Clear"
                    on_press: root.pick_clear()


<PainLayout>:
    canvas.before:
        Color:
            rgba: 0.21, 0.1, 0.2, 1


<MainWindow>:
    id_tools: tools
    id_paint: paint
    GridLayout:
        cols: 2
        rows: 1
        size: root.width, root.height
        ToolsLayout:
            id: tools
            size_hint_x: None
            width: int(root.width*0.3)
        PainLayout:
            id: paint
            size_hint_x: None
            width: int(root.width*0.7)
            shape: root.id_tools.shape
            color: root.id_tools.color_picked


